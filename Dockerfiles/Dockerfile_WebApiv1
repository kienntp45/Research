FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
ARG http_proxy=http://proxy.fpts.com.vn:8080
ARG https_proxy=http://proxy.fpts.com.vn:8080
WORKDIR /src
COPY "Web.Api.v1/Web.Api.v1.csproj" "Web.Api.v1/Web.Api.v1.csproj"
COPY . .
WORKDIR /src/Web.Api.v1
RUN dotnet publish -r linux-x64 --self-contained false "Web.Api.v1.csproj"  -c release -o /app
FROM mcr.microsoft.com/dotnet/runtime:6.0
WORKDIR /app
COPY --from=build /app .
ENV ASPNETCORE_URLS="http://0.0.0.0:80/"
EXPOSE 80
ENTRYPOINT ["dotnet", "Web.Api.v1.dll"]